name: ğŸš€ Build APK (GHOST_LUFFY_WEBVIEW)

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout repository
        uses: actions/checkout@v3

      - name: â˜• Set up Java
        uses: actions/setup-java@v3
        with:
          distribution: 'zulu'
          java-version: '11'

      - name: ğŸ§± Setup Gradle cache
        uses: gradle/gradle-build-action@v2

      - name: ğŸ› ï¸ Build Debug APK
        run: |
          chmod +x ./gradlew
          ./gradlew assembleDebug+

      - name: ğŸ“¦ Upload APK to Artifacts
git add .github/workflows/android-webview-build.yml
git commit -m "ğŸš€ Add GitHub Actions CI to auto-build APK"
git push origin main
        uses: actions/upload-artifact@v3
        with:
          name: ghost-luffy-debug-apk
          path: app/build/outputs/apk/debug/*.apk

      - name: ğŸš€ Release APK (Optional)
        if: github.ref == 'refs/heads/main'
        uses: softprops/action-gh-release@v1
        with:
          name: Ghost Luffy WebView Build ${{ github.run_number }}
#!/data/data/com.termux/files/usr/bin/bash

YAML_FILE=".github/workflows/android-webview-build.yml"

# Check if the file exists
if [ ! -f "$YAML_FILE" ]; then
  echo "âŒ YAML file not found at $YAML_FILE"
  exit 1
fi

# Remove invalid bash commands from YAML (git lines)
sed -i '/git add/d' "$YAML_FILE"
sed -i '/git commit/d' "$YAML_FILE"
sed -i '/git push/d' "$YAML_FILE"

echo "âœ… Removed invalid git commands from YAML."

# Stage and commit the fix
git add "$YAML_FILE"
git commit -m "ğŸš€ Fix YAML: Removed embedded git commands from workflow"
git push origin main

echo "âœ… Fix pushed to GitHub. Check Actions tab: https://github.com/adzry/ghost-luffy-webview-tablet/actions"          tag_name: v1.${{ github.run_number }}
          files: app/build/outputs/apk/debug/*.apk

